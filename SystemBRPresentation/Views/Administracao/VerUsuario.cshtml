@using Presentation.Extensions
@using CrossCutting;
@model SystemBRPresentation.ViewModels.UsuarioViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title"> 
        <h3 class="title">Usuário - Consulta</h3> 
    </div>

    <div class="row">
        <div class="col-lg-2">
            <div class="widget style1 navy-bg">
                <div class="row vertical-align">
                    <div class="col-xs-3">
                        <i class="fa fa-user fa-3x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        @if (Model.USUA_IN_ATIVO == 1)
	                    {
                            <h3 class="font-normal">Ativo</h3>
                        }
                        else
                        {
                            <h3 class="font-normal">Inativo</h3>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="widget style1 yellow-bg">
                <div class="row vertical-align">
                    <div class="col-xs-3">
                        <i class="fa fa-thumbs-o-up fa-3x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        @if (Model.USUA_IN_BLOQUEADO == 1)
	                    {
                            <h3 class="font-normal">Bloqueado</h3>
                        }
                        else
                        {
                            <h3 class="font-normal">Desbloqueado</h3>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-10 col-md-10 col-xs-12 ibox float-e-margins">
            <div class="ibox-title">
                <h5>Usuário - Informações de Cadastro</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#">Config option 1</a>
                        </li>
                        <li>
                            <a href="#">Config option 2</a>
                        </li>
                    </ul>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>           
            <div class="ibox-content">
                <div class="row">
                    <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                        <div class="col-lg-3 col-md-3 col-xs-12">
                            Nome
                            @Html.TextBoxFor(m => m.COLABORADOR.COLA_NM_NOME, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                        </div>
                        <div class="col-lg-2 col-md-2 col-xs-12">
                            CPF 
                            @Html.TextBoxFor(m => m.COLABORADOR.COLA_NR_CPF, new { @class = "form-control", autofocus = true, @readonly="readonly"  })
                        </div>
                        <div class="col-lg-4 col-md-4 col-xs-12">
                            E-Mail
                            @Html.TextBoxFor(m => m.USUA_NM_EMAIL, new { @class = "form-control",  autofocus = true, @readonly="readonly"  })
                        </div>
                        <div class="col-lg-3 col-md-3 col-xs-12">
                            Perfil
                            @Html.TextBoxFor(m => m.PERFIL.PERF_NM_NOME, new { @class = "form-control",  autofocus = true, @readonly="readonly"  })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-2 col-xs-12">
            <div class="form-group">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <br />
                    <img src="@Url.Content(Model.USUA_AQ_FOTO)" style = "width: auto; height: auto; max-height: 110px; max-width: 90px;">
                </div>                       
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
            <div class="ibox-title">
                <h5>Usuário - Informações de Acesso</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#">Config option 1</a>
                        </li>
                        <li>
                            <a href="#">Config option 2</a>
                        </li>
                    </ul>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>           
            <div class="ibox-content">
                <div class="row">
                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                    <div class="col-lg-2 col-md-2 col-xs-12">
                        Data de Bloqueio 
                        @Html.TextBoxFor(m => m.USUA_DT_BLOQUEIO, new { @class = "form-control", autofocus = true, @readonly="readonly"  })
                    </div>
                    <div class="col-lg-1 col-md-1 col-xs-12">
                        Acessos
                        @Html.TextBoxFor(m => m.USUA_NR_ACESSOS, new { @class = "form-control",  autofocus = true, @readonly="readonly"  })
                    </div>
                    <div class="col-lg-2 col-md-2 col-xs-12">
                        Data Acesso
                        @Html.TextBoxFor(m => m.USUA_DT_ACESSO, new { @class = "form-control",  autofocus = true, @readonly="readonly"  })
                    </div>
                    <div class="col-lg-1 col-md-1 col-xs-12">
                        Falhas
                        @Html.TextBoxFor(m => m.USUA_NR_FALHAS, new { @class = "form-control",  autofocus = true, @readonly="readonly"  })
                    </div>
                    <div class="col-lg-2 col-md-2 col-xs-12">
                        Data Falha
                        @Html.TextBoxFor(m => m.USUA_DT_ULTIMA_FALHA, new { @class = "form-control",  autofocus = true, @readonly="readonly"  })
                    </div>
                    <div class="col-lg-2 col-md-2 col-xs-12">
                        Data Troca Senha
                        @Html.TextBoxFor(m => m.USUA_DT_TROCA_SENHA, new { @class = "form-control",  autofocus = true, @readonly="readonly"  })
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
        <div class="col-lg-12 col-md-12 col-xs-12">
            @Html.ButtonLinkIndex(text: "Voltar", controller: "Administracao", action: "VoltarBase")
        </div>
    </div>
</div>

@section Styles {
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />  
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
}

@section Scripts {

    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.js"></script>
    

    </script>
    <script type="text/javascript">
        $(function () {
            $("#cpf").mask("999.999.999-99");
        });
    </script>

}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}

