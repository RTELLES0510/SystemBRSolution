@using Presentation.Extensions
@using CrossCutting;
@model EntitiesServices.Model.USUARIO
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title"> 
        <h3 class="title">Usuários</h3> 
    </div>
    <div class="row">
        <div class="col-lg-3">
            <div class="ibox">
                <div class="ibox-content">
                    <h5>Usuários</h5>
                    <h1 class="no-margins">2</h1>
                    <div class="stat-percent font-bold text-navy">50% <i class="fa fa-bolt"></i></div>
                    <small>Usuários cadastrados</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox">
                <div class="ibox-content">
                    <h5>Bloqueios</h5>
                    <h1 class="no-margins">0</h1>
                    <div class="stat-percent font-bold text-navy">100% <i class="fa fa-bolt"></i></div>
                    <small>Usuários Bloqueados</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox">
                <div class="ibox-content">
                    <h5>Inativos</h5>
                    <h1 class="no-margins">0</h1>
                    <div class="stat-percent font-bold text-danger">0% <i class="fa fa-level-down"></i></div>
                    <small>Usuários Inativos</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox">
                <div class="ibox-content">
                    <h5>Novos</h5>
                    <h1 class="no-margins">1</h1>
                    <div class="stat-percent font-bold text-danger">100% <i class="fa fa-level-down"></i></div>
                    <small>Novos Usuários</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Filtros</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>           
            
                @using (Html.BeginForm("FiltrarUsuario", "Administracao", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="ibox-content">
                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                <div class="col-lg-3 col-md-3 col-xs-12">
                                    Nome
                                    @Html.TextBoxFor(m => m.COLABORADOR.COLA_NM_NOME, new { @class = "form-control", autofocus = true })
                                </div>
                                <div class="col-lg-2 col-md-2 col-xs-12">
                                    CPF 
                                    @Html.TextBoxFor(m => m.COLABORADOR.COLA_NR_CPF, new { @class = "form-control", @id="cpf", autofocus = true })
                                </div>
                                <div class="col-lg-4 col-md-4 col-xs-12">
                                    E-Mail
                                    @Html.TextBoxFor(m => m.USUA_NM_EMAIL, new { @class = "form-control",  autofocus = true })
                                </div>
                                <div class="col-lg-3 col-md-3 col-xs-12">
                                    Perfil
                                    @Html.DropDownListFor(m => m.PERF_CD_ID, (SelectList)ViewBag.Perfis, "Selecionar", new { @class = "form-control" })                            
                                </div>
                            </div>
                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                <div class="col-lg-12 col-md-12 col-xs-12">
                                    @Html.ButtonActionSubmit(text: "Filtrar")
                                    @Html.ButtonLinkIndex(text: "Retirar Filtro", controller: "Administracao", action: "RetirarFiltro")
                                    @Html.ButtonLinkIndex(text: "Exibir Todos", controller: "Administracao", action: "MostrarTudo")
                                    @Html.ButtonLinkIndex(text: "Voltar", controller: "Administracao", action: "Voltar")
                                </div>
                            </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Usuários</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                            @if ((ViewBag.Listas as List<EntitiesServices.Model.USUARIO>).Count > 0)                                        {
                                <table class="table table-striped table-bordered table-hover dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Nome</th>   
                                            <th>E-Mail</th>
                                            <th>CPF</th>
                                            <th>Cargo</th>
                                            <th>Perfil</th>
                                            <th class="td-one-action">Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var cond in (ViewBag.Listas as List<EntitiesServices.Model.USUARIO>))
                                        {
                                            <tr>
                                                <td>@cond.COLABORADOR.COLA_NM_NOME</td>
                                                <td>@cond.USUA_NM_EMAIL</td>
                                                <td>@CrossCutting.Formatters.CPFFormatter(cond.COLABORADOR.COLA_NR_CPF)</td>
                                                <td>@cond.COLABORADOR.CARGO.CARG_NM_NOME</td>
                                                <td>@cond.PERFIL.PERF_NM_NOME</td>                                                        
                                                <td class="td-one-action">
                                                    @Html.TableLinkDetails(cond.USUA_CD_ID, "VerUsuario","fa-search", "Ver Informações do Usuário")
                                                    @if (cond.USUA_IN_BLOQUEADO == 1)
	                                                {
                                                        @Html.TableLinkDetails(cond.USUA_CD_ID, "BloquearUsuario","fa-thumbs-o-up", "Desbloquear Usuário")
                                                    }
                                                    else
                                                    {
                                                        @Html.TableLinkDetails(cond.USUA_CD_ID, "BloquearUsuario","fa-thumbs-o-down", "Bloquear Usuário"            )
                                                    }
                                                    @if (cond.USUA_IN_ATIVO == 1)
	                                                {
                                                        @Html.TableLinkDetails(cond.USUA_CD_ID, "DesativarUsuario","fa-trash-o", "Desativar Usuário")
                                                    }
                                                    else
                                                    {   
                                                        @Html.TableLinkDetails(cond.USUA_CD_ID, "DesativarUsuario","fa-refresh", "Reativar Usuário")
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                     </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />  
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
}

@section Scripts {

    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.js"></script>
    
    <script type="text/javascript">
        $(document).ready(function () {

            $('.dataTables-example').DataTable({
                pageLength: 25,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'ExampleFile' },
                    { extend: 'pdf', title: 'ExampleFile' },

                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                    .addClass('compact')
                                    .css('font-size', 'inherit');
                        }
                    }
                ]

            });

           

        });

    </script>
    <script type="text/javascript">
        $(function () {
            $("#cpf").mask("999.999.999-99");
        });
    </script>
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}

